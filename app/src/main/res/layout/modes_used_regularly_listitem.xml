<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/modes_used_regularly_inner_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/transportModeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_remove_black_24dp" />

        <TextView
            android:id="@+id/transportModeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:maxLines="3"
            android:text="@string/Other_Private_Motorised"
            android:textColor="#70706D"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/transportModeIcon"
            app:layout_constraintEnd_toStartOf="@id/usedTransportSwitch"
            app:layout_constraintStart_toEndOf="@+id/transportModeIcon"
            app:layout_constraintTop_toTopOf="@+id/transportModeIcon" />


        <vn.luongvo.widget.iosswitchview.SwitchView
            android:id="@+id/usedTransportSwitch"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:color_on="#ED7E03"
            app:layout_constraintBottom_toBottomOf="@+id/transportModeIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transportModeIcon" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>