<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inesc_id.pt.motivandroid.deprecated.WeatherActivity">

    <TextView
        android:id="@+id/weatherTimestampTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Updated on:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastWeatherTimestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Still retrieving weather data"
        app:layout_constraintStart_toEndOf="@+id/weatherTimestampTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherDataTimestampTextView"
        android:layout_width="382dp"
        android:layout_height="545dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Weather data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherTimestampTitle" />
</android.support.constraint.ConstraintLayout>
